  /*float: left;*/
}

table {
	width: 100%;
}

td {
	max-width: 1px;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

td.is-auto-width {
	max-width: unset;
	width: auto;
	overflow: visible;
	text-overflow: unset;
	white-space: nowrap;
}

td:hover{
	max-width: 1px;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: normal;
}

button.text {
	 background:none!important;
	 border:none;
	 padding:0!important;
	 font: inherit;
	 /*border is optional*/
	 border-bottom:none;
	 cursor: pointer;
}

/*
Bootstrap does not appear to suport buttons
in an addon group, so we make this supportable
by setting the padding of the addon to 0, and
making the button a sufficient width. This gives us a
good hitbox for the click
 */
.input-group-addon-btn {
	padding:0;
}

.input-group-addon-btn > button {
	min-width:25px;
}

