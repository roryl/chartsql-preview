										<div class="form-group">

											{{#each current_params}}
												{{#unless is_goto_page}}
													{{#if is_struct}}
														{{#each value}}
															<input type="hidden" name="{{name}}.{{@key}}" value="{{this}}">
														{{/each}}
													{{else}}
														<input type="hidden" name="{{name}}" value="{{value}}">
													{{/if}}
												{{/unless}}
											{{/each}}
											<button class="btn-primary btn btn-sm">go to page</button>
											<input name="{{table_name_prefix}}goto_page" class="form-control form-control-sm" type="page" style="width:50px;">
											of {{toString pagination.total_pages}} pages
										</div>
									</form>
								</li>
							</ul>
